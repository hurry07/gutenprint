## Process this file with automake to produce Makefile.in.

AUTOMAKE_OPTIONS = 1.4 foreign

@SET_MAKE@

MAINT_CHARSET = latin1

PACKAGE = cups
datadir = @cups_datadir@
libdir = @cups_libdir@
sysconfdir = @cups_sysconfdir@
pkglibdir = $(libdir)/$(PACKAGE)

cups_backenddir = $(pkglibdir)/backend
cups_filterdir = $(pkglibdir)/filter

CFLAGS = @CFLAGS@ $(CUPS_CFLAGS)
DEFS = @DEFS@ -I. -I$(srcdir) -I../.. -DCUPS_DATADIR=\"$(cups_exec_prefix)/share/cups\" -DGIMP_PRINT_VERSION=\"$(VERSION)\"
INCLUDES = @INCLUDES@

## Programs

bin_PROGRAMS = @CUPS_BIN@

cups_backend_PROGRAMS = @CUPS_BACKEND_BIN@

cups_filter_PROGRAMS = @CUPS_FILTER_BIN@

noinst_PROGRAMS = @CUPS_NOINST_BIN@

EXTRA_PROGRAMS = cups-calibrate commandtoepson epson genppd rastertoprinter commandtocanon canon

cups_calibrate_LDADD = -lm

commandtoepson_LDADD = $(CUPS_LIBS)

canon_LDADD = $(CUPS_LIBS)

epson_LDADD = $(CUPS_LIBS)

genppd_LDADD = $(CUPS_LIBS) $(GIMPPRINT_LIBS)

rastertoprinter_LDADD = $(CUPS_LIBS) $(GIMPPRINT_LIBS)

## Data

if CUPS_INSTALL
install-data-local: ppd
endif
	$(mkinstalldirs) $(DESTDIR)$(libdir)
	$(mkinstalldirs) $(DESTDIR)$(libdir)/$(PACKAGE)
	$(mkinstalldirs) $(DESTDIR)$(datadir)/$(PACKAGE)/model
	cd ppd ; \
	for ppdfile in * ; do \
	  $(INSTALL_DATA) $$ppdfile $(DESTDIR)$(datadir)/$(PACKAGE)/model/ ; \
	done
	$(INSTALL_DATA) calibrate.ppm $(DESTDIR)/$(datadir)/$(PACKAGE)
	$(mkinstalldirs) $(DESTDIR)/$(sysconfdir)
	$(mkinstalldirs) $(DESTDIR)/$(sysconfdir)/$(PACKAGE)
	$(INSTALL_DATA) command.types $(DESTDIR)/$(sysconfdir)/$(PACKAGE)/command.types

## Rules

.PHONY: ppd

ppd:    genppd
	-rm -r ppd/*
	./genppd

$(GIMPPRINT_LIBS):
	make -C ../main

dist-hook:
	for dir in commands ; do \
	  if test -d $$dir ; then \
	    mkdir $(distdir)/$$dir; \
	    for dirfile in $$dir/*; do \
	      if test -f $$dirfile ; then \
	        cp -p $$dirfile $(distdir)/$$dir; \
	      fi \
	    done \
	  fi \
	done

clean-local:
	-rm -rf ppd

CLEANFILES = $(EXTRA_PROGRAMS)
MAINTAINERCLEANFILES = Makefile.in

EXTRA_DIST = \
	COPYING \
	README \
	ChangeLog \
	cups-calibrate.c \
	calibrate.ppm \
	canon.c \
	command.txt \
	command.types \
	commandtocanon.c \
	commandtoepson.c \
	epson.c \
	genppd.c \
	rastertoprinter.c
