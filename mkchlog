#!/usr/bin/perl

%logmsgs = ();			# Index by date, time, and author

while (<>) {
    if (/^Working file: /) {
	chomp;
	($ignore, $ignore, $currentfile) = split;
	while (<>) {
	    if (/^----------------------------$/) {
		last;
	    }
	}
	next;
    } elsif (/^----------------------------$/) {
	next;
    } elsif (/^revision /) {
	($ignore, $revision) = split;
    } elsif (/^date: /) {
	($ignore, $date, $time, $ignore, $author, $ignore) = split;
	$time =~ s/:[0-9][0-9];$//;
	$author =~ s/;$//;
	$datetimeauthor = "$date $time $author";
	$body = "";
	$firstline = 1;
	while (<>) {
	    if (/^----------------------------$/) {
		last;
	    } elsif (/^=============================================================================$/) {
		last;
	    } elsif ($firstline && /^branches:[ \t]+[0-9]+(\.[0-9]+)+;$/) {
		next;
	    } else {
		$body .= $_;
		$firstline = 0;
	    }
	}
	if ($logmsgs{$datetimeauthor}) {
	    $stuff = $logmsgs{$datetimeauthor};
	    $stuff =~ s/\n/\n\t$currentfile ($revision)\n/;
	    $logmsgs{$datetimeauthor} = $stuff;
	} else {
	    $logmsgs{$datetimeauthor} = "Files:\t$currentfile ($revision)\n\n$body"
	}
    }				# Other junk we ignore
}

@chlog = reverse sort keys %logmsgs;
foreach $_ (@chlog) {
    ($date, $time, $author) = split;
    $date =~ s,/,-,g;
    $msg = $logmsgs{$_};
    print "$date\t<$author\@sourceforge.net>\n\n";
    $msg =~ s/^/\t/g;
    $msg =~ s/\n/\n\t/g;
    print "$msg\n";
}
